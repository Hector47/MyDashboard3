@page "/bookmark"
@using BlazorApp.Shared 
@inject HttpClient Http

<h1>Bookmarks</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (bookmarks == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Url</th>
                <th>Icon</th>
                <th>Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bookmark in bookmarks)
            {
                <tr>
                    <td>@bookmark.Title</td>
                    <td>@bookmark.Uri</td>
                    <td>@bookmark.Icon</td>
                    <td>@bookmark.Icon</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Bookmark[] bookmarks;

    protected override async Task OnInitializedAsync()
    {
      try
      {
        bookmarks = await Http.GetFromJsonAsync<Bookmark[]>("/api/Bookmark");
      }
      catch (Exception ex)
      {
        Console.WriteLine(ex.ToString());
      }
    }
}
